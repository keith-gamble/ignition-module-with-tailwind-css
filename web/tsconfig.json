{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"*"
			]
		},
		"declaration": true,
        "declarationDir": "dist/typings/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitThis": true,
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/",
        "pretty": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6",
        "lib": ["es6", "dom", "es7", "es2017"],
		// "noEmit": false,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"react",
			"react-dom"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "babelCore": "babel-core"
    }
}